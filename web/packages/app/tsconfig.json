{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@backtester/ui": ["../ui/src"],
      "@backtester/ui/*": ["../ui/src/*"]
    },
    "types": ["vite/client"],
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "../node_modules/@types",
      "../../node_modules/@types",
      "../../../node_modules/@types"
    ],
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
